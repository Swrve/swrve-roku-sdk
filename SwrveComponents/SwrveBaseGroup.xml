        <![CDATA[ 
        
          function SwrveIdentifyExternalIDWithCallback(externalID as String, callbackFunction as String) as void
            print "[SwrveSDK] IdentifyExternalIDWithCallback - " + externalID
            m.SwrveIdentifyTask = CreateObject("roSGNode", "SwrveIdentifyTask")
            m.SwrveIdentifyTask.control = "WAIT"
            m.SwrveIdentifyTask.externalID = externalID
            m.SwrveIdentifyTask.control = "RUN"

            m.SwrveIdentifyTask.observeField("results", callbackFunction)
          end function
            ]]>
